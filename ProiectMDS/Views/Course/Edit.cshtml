@model ProiectMDS.Models.Task

    


<form method="post" action="/Course/Edit/@Model.Id">

    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    @Html.HiddenFor(m => m.Id)

    @Html.Label("Title", "Course")
    <br />
    @Html.Editor("Title")
    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Description", "Descriere course")
    <br />

    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    <br /><br />

    @Html.Label("DueDate", "Deadline")
    <br />
    @Html.TextBox("DueDate", "", new { @class = "form-control datepicker", @placeholder = "Introduceti data" })


    @Html.ValidationMessage("DueDate", null, new { @class = "text-danger" })
    <br /><br />


    <input type="hidden" name="SubjectId" value="@Model.SubjectId" />

    <button class="btn btn-sm btn-success" type="submit">Modifică curs</button>

</form>


