@model ProiectMDS.Models.ApartineT

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Adăugare membru</h2>

<form method="post" action="/ApartineT/New">



    <input type="hidden" name="TaskId" value="@Model.TaskId" />

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css"
          rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css"
          rel="stylesheet" type="text/css" />
    <script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js"
            type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#SelectedUsers').multiselect({
                includeSelectAllOption: true
            });
            $('#btnSelected').click(function () {
                var selected = $("#SelectedUsers option:selected");
                var message = "";
                selected.each(function () {
                    message += $(this).text() + " " + $(this).val() + "\n";
                });
                if (message == "") {
                    message = "Nu a fost selectat niciun user!";
                }

            });
        });

    </script>
    <div class="container" style="border:1px solid #e1d8d8; height:350px">
        <h2>
            Adaugă users pentru acest task


        </h2>
        <table>
            <tr>
                <td></td>
                <td>
                    @Html.DropDownList("SelectedUsers", ViewBag.UsersList as SelectList, new { style = "width:100%", multiple = "multiple" })
                </td>
                <td>

                    <button id="btnSelected" class="btn btn-sm btn-success" type="submit">Alege membrii</button>
                </td>
            </tr>
        </table>
    </div>

</form>


