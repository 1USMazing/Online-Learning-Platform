    <link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css"
          rel="stylesheet" type="text/css" />
    <script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js"
            type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#SelectedUsers').multiselect({
                includeSelectAllOption: true
            });
            $('#btnSelected').click(function () {
                var selected = $("#SelectedUsers option:selected");
                var message = "";
                selected.each(function () {
                    message += $(this).text() + " " + $(this).val() + "\n";
                });
                if (message == "") {
                    message = "Nu a fost selectat niciun user!";
                }

            });
        });

    </script>
    <div class="container" style="border:1px solid #e1d8d8; height:350px">
        <h2>
            Adauga users pentru acest proiect


        </h2>
        <table>
            <tr>
                <td>

                </td>
                <td>
                    @Html.DropDownList("SelectedUsers", ViewBag.UsersList as SelectList, new { style = "width:100%", multiple = "multiple" })
                </td>
                <td>

                    <button id="btnSelected"class="btn btn-sm btn-success" type="submit">Alege membrii</button>
                </td>
            </tr>
        </table>
    </div>

